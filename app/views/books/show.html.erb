<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="card card-category">
        <div class="card-body">
          <h1><%= @book.name %></h1>
          <p><%= @book.author %></p>
          <p><%= @book.price %></p>
          <% if @book.photo.attached? %>
            <%= cl_image_tag @book.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            No photo available
          <% end %>
            <%= button_to "Purchase!", orders_path, method: :post, params: { book_id: @book.id, quantity: 1.to_i, user_id: current_user.id }, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

