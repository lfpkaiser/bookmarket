<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @book.name %></h1>
      <p><%= @book.author %></p>
      <p><%= @book.price %></p>
       <% if @book.photo.attached? %>
            <%= cl_image_tag @book.photo.key, class: "book-photo" %>
          <% else %>
            No photo available
        <% end %>
      <a href="#" class="btn btn-primary">Purchased!</a>
    </div>
  </div>
</div>
