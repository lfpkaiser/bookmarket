<div class="container py-1">
  <div class="card-product text-center">
    <h1> Sell your book </h1>
  </div>

<div style="display: flex; align-items: center; justify-content: center; m-5">
  <i class="fa-solid fa-coins" style="font-size: 2em;"></i>
</div>

  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow" style="margin-top: 20px;">
        <%= simple_form_for(@book) do |form| %>
          <div class="form-group">
            <%= form.input :name, placeholder: "Enter book name" %>
            <%= form.input :author, placeholder: "Enter author name" %>
            <%= form.input :genre, placeholder: "Enter book genre", collection: Book::GENRES %>
            <%= form.input :year, placeholder: "Enter publication year" %>
            <%= form.input :price, placeholder: "Enter book price" %>
            <%= form.input :descricao, placeholder: "Tell more about your book", label: "Description (Optional)" %>
            <%= form.input :quantity, placeholder: "Enter book quantity", error: 'not found' %>
            <%= form.input :photo, as: :file %>
              <div class="actions ">
                <%= form.submit class: "btn btn-dark" %>
                <%= link_to "Cancel", books_path, class: "btn btn-dark", style: "float: right;" %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
