<div class="text-center">
  <h1> My shelf </h1><i class="fa-solid fa-book-open" style="font-size: 2em;"></i>
  <% if @books.empty? %>
    <p> You have no books in your shelf. </p>
  <% else %>
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-4" style="padding: 10px;">
          <div class="card">
            <% if book.photo.attached? %>
              <%= link_to cl_image_tag(book.photo.key, class: "", height: 100, width: 300, crop: :fill, style: "margin-top: 40px;"), book_path(book) %>
            <% else %>
              <div class="">No photo available</div>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <strong><%= book.name %></strong>
              </h5>
              <p class="card-text">Author: <%= book.author %></p>
              <div class="button-container" style="display: flex; justify-content: center;">
                <p class="button-item" style="margin-right: 5px;"><%= link_to "View more details", book_path(book), class: "btn btn-dark" %></p>
                <p class="button-item" style="margin-right: 5px;"><%= link_to "Edit", edit_book_path(book), class: "btn btn-dark" %></p>
                <p class="button-item"  style="margin-right: 5px;"><%= button_to "Delete", book, method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, class: "btn btn-danger delete-button" %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
