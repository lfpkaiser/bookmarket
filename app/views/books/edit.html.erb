<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Edit Book</h1>

        <%= simple_form_for(@book) do |form| %>
            <div class="form-group">
            <%= form.input :name%>
            <%= form.input :author%>
            <%= form.input :genre%>
            <%= form.input :year%>
            <%= form.input :price%>
            <%= form.input :quantity%>
            <%= form.input :photo, as: :file %>

                <div class="actions">

              <%= form.submit %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
