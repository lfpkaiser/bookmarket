<h1 class="mb-4"> My shelf </h1>

<% if @books.empty? %>
  <p class="mb-4"> You have no books in your shelf. </p>
<% else %>
  <div class="container">
    <ul class="cards">
      <% @books.each do |book| %>
        <li class="cards__item">
          <div class="card">
            <% if book.photo.attached? %>
              <%= link_to cl_image_tag(book.photo.key, class: "card__image card__image--fence"), book_path(book) %>
            <% else %>
              <div class="card__image card__image--fence">No photo available</div>
            <% end %>

            <div class="card__content">
              <div class="card__title"><%= book.name %></div>
              <p class="card__text">Author: <%= book.author %></p>
              <p class="card__text">Genre: <%= book.genre %></p>

              <%= link_to "View more details", book_path(book), class: "btn btn--block card__btn btn-primary" %>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn--block card__btn btn-primary" %>
              <%= button_to "Delete", book, method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, class: "btn btn--block card__btn btn-dark" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Add a book to the shelf", new_book_path, class: "btn btn-primary" %>
<% end %>
