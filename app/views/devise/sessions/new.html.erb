<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-dark", style: "margin-bottom: 10px;" %>
            </div>
          <% end %>

        <%= button_to "Sign up", new_registration_path(resource_name), method: :get, class: "btn btn-primary", style: "margin-bottom: 10px;" %>
        <%= button_to "Forgot your password?", new_password_path(resource_name), method: :get, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>
