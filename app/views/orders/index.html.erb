<h1>All Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Book Name</th>
      <th>Quantity</th>
      <th>Order Date</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.book.name %></td>
        <td><%= order.quantity %></td>
        <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= button_to "Delete Order", order, method: :delete, data: { turbo_method: :delete, confirm: "Are you sure you want to delete this order?" }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
